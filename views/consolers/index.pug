extends ../layout

block content
   
            .bg.light
                .row
                    .col-md-12
                        .tile
                            .tile-body
                                a(href='/consolersadd')
                                    input(type="button", value="Novo").btn.btn-success().btn-lg.offset-5
                                    <br><br>
                                div.container
                                table.table.table-hover.table-bordered#sampleTable
                                    thead
                                        tr
                                            th Nome
                                            th Opções
                                    tbody
                                    each c in consolers
                                        tr
                                            td #{c.name}
                                            td
                                                a(href=`/consolersedit/${c.id}`).offset-2
                                                    button.btn.btn-primary() Editar
                                                a(href=`/consolersdel/${c.id}`).offset-2
                                                    button.btn.btn-danger() Excluir
            