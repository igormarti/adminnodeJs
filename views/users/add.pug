extends ../layout

block content
    
        div.container
            .col-12
                .tile
                    if success
                        div.alert.alert-success #{success}
                    if errors
                        each e in errors
                            div.alert.alert-danger #{e.msg}
                    form(action="/userscreate", method="post").offset-4
                        .form-group
                            label(for="name") Nome
                            input.form-control.col-6(type="text", name="name")
                        .form-group
                            label(for="name") Email
                            input.form-control.col-6(type="email", name="email")    
                        .form-group
                            label(for="gender") Senha
                            input.form-control.col-6(type="password",name="password")
                                 
                        .form-group
                            button.btn.btn-primary.offset-2(type="submit") Enviar    