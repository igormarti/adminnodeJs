extends ../layout

block content
 
            .bg.light
                .row
                    .col-md-12
                        .tile
                            .tile-body
                                a(href='/usersadd')
                                    input(type="button", value="Novo").btn.btn-success().btn-lg.offset-5
                                    <br><br>
                                div.container
                                table.table.table-hover.table-bordered#sampleTable
                                    thead
                                        tr
                                            th Nome
                                            th Email
                                            th Opções
                                    tbody
                                    each u in users
                                        tr
                                            td #{u.name}
                                            td #{u.email}
                                            td
                                                a(href=`/usersedit/${u.id}`).offset-2
                                                    button.btn.btn-primary() Editar
                                                a(href=`/usersdel/${u.id}`).offset-2
                                                    button.btn.btn-danger() Excluir
            