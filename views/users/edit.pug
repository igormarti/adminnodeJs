extends ../layout

block content
        div.container
            .col-12
                .tile
                    if errors
                        each e in errors
                            div.alert.alert-danger #{e.msg}
                    if success
                        div.alert.alert-success #{success}
                    form(action="/usersupdate", method="post").offset-4
                        .form-group
                            label(for="name") Nome
                            input.form-control.col-6(type="text", name="name",value=`${user.name}`) 

                        .form-group
                            label(for="gender") Email
                            input.form-control.col-6(type="email",name="email",value=`${user.email}`)
                             
                        .form-group
                            label(for="console") Senha
                            input.form-control.col-6(type="password",name="password",value=`${user.password}`)
                                          
                        .form-group
                            button.btn.btn-primary.offset-2(type="submit") Atualizar
                            input(type="hidden", name="id",value=`${user.id}`)   